{
  "name": "doudou-personal-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "npm run preflight",
    "dev": "next dev",
    "build": "NEXT_TELEMETRY_DISABLED=1 next build",
    "vercel-build": "GIT_CONFIG_NOSYSTEM=1 GIT_CONFIG_GLOBAL=/dev/null NEXT_TELEMETRY_DISABLED=1 NEXT_BUILD_TRACE=false DISABLE_COLLECT_BUILD_TRACES=true NODE_OPTIONS='--max-old-space-size=4096' next build",
    "vercel-build-simple": "rm -rf .next && rm -rf node_modules/.cache && NEXT_TELEMETRY_DISABLED=1 GIT_CONFIG_NOSYSTEM=1 GIT_CONFIG_GLOBAL=/dev/null NEXT_BUILD_TRACE=false DISABLE_COLLECT_BUILD_TRACES=true NODE_OPTIONS='--max-old-space-size=4096' npx next build",
    "prestart": "npm run preflight",
    "start": "next start",
    "preview": "npm run build && NODE_ENV=production next start -p 3000",
    "lint": "next lint",
    "preflight": "ts-node -P tsconfig.scripts.json scripts/preflight.ts",
    "preflight:fix-missing-images": "FIX=delete ts-node -P tsconfig.scripts.json scripts/repair-aigc-images.ts",
    "test:db": "ts-node -P tsconfig.scripts.json scripts/test-database-connection.ts",
    "db:info": "ts-node -P tsconfig.scripts.json scripts/check-database-info.ts",
    "dev:preflight": "npm run preflight && npm run dev",
    "db:manage": "npm run db:manage-blog",
    "db:setup": "ts-node -P tsconfig.scripts.json scripts/setup-database.ts",
    "db:init": "ts-node -P tsconfig.scripts.json scripts/init-aigc-db.ts",
    "db:test": "ts-node -P tsconfig.scripts.json scripts/test-aigc-config.ts",
    "db:manage-aigc-image": "ts-node -P tsconfig.scripts.json scripts/manage-aigc-image.ts",
    "db:manage-aigc-music": "ts-node -P tsconfig.scripts.json scripts/manage-aigc-music.ts",
    "db:manage-aigc-video": "ts-node -P tsconfig.scripts.json scripts/manage-aigc-video.ts",
    "db:manage-aigc-master": "ts-node -P tsconfig.scripts.json scripts/manage-aigc-master.ts",
    "db:manage-blog": "ts-node -P tsconfig.scripts.json scripts/manage-blog-db.ts",
    "changelog": "ts-node -P tsconfig.scripts.json scripts/update-changelog.ts",
    "deploy:init": "ts-node -P tsconfig.scripts.json scripts/deploy-init.ts",
    "deploy:verify": "ts-node -P tsconfig.scripts.json scripts/verify-deployment.ts",
    "db:test-vercel": "ts-node -P tsconfig.scripts.json scripts/test-vercel-db.ts"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/pg": "^8.15.5",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.0.0",
    "copy-to-clipboard": "^3.3.3",
    "cos-nodejs-sdk-v5": "^2.15.4",
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.1",
    "framer-motion": "^10.16.4",
    "gray-matter": "^4.0.3",
    "highcharts": "^12.4.0",
    "highcharts-react-official": "^3.2.2",
    "lucide-react": "^0.292.0",
    "next": "14.0.0",
    "pg": "^8.16.3",
    "postcss": "^8.4.31",
    "prismjs": "^1.30.0",
    "react": "^18",
    "react-dom": "^18",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-prism-plus": "^2.0.1",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-html": "^15.0.2",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "unified": "^11.0.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/uuid": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.0"
  }
}
